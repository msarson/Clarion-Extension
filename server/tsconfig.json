{
    "compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"module": "commonjs",
		"target": "es2019",
		"lib": ["ES2019"],
		"outDir": "out",
		"rootDir": "./src",
		"sourceMap": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
        "esModuleInterop": true,  // Allows easier imports from ANTLR
        "allowSyntheticDefaultImports": true  // Helps with ANTLR imports
	},
    "include": [
		"src",
		"server/parser/**/*.ts"  // Include ANTLR-generated files
	],
    "exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}