{
	"version": "0.2.5",
	"configurations": [
	  {
		"name": "Launch Server",
		"type": "node",
		"request": "launch",
		"program": "${workspaceFolder}/out/server/src/server.js",
		"args": ["--stdio"],
		"restart": true,
		"outFiles": ["${workspaceFolder}/out/**/*.js"],
		"sourceMaps": true
	  },
	  {
		"name": "Attach to Server",
		"type": "node",
		"request": "attach",
		"port": 6009,
		"restart": true,
		"outFiles": ["${workspaceFolder}/out/**/*.js"],
		"sourceMaps": true
	  },
	  {
		"name": "Launch Client",
		"type": "extensionHost",
		"request": "launch",
		"runtimeExecutable": "${execPath}",
		"args": [
		  "--extensionDevelopmentPath=${workspaceFolder}"
		],
		"outFiles": [
		  "${workspaceFolder}/out/**/*.js"
		],
		"sourceMaps": true,
		"preLaunchTask": "npm: watch"
	  }
	],
	"compounds": [
	  {
		"name": "Client + Server",
		"configurations": ["Launch Server", "Attach to Server", "Launch Client"],
		"stopAll": true
	  }
	]
  }
  